  },
  "homepage": "https://github.com/zombieFox/nightTab#readme",
  "devDependencies": {
    "gulp": "^4.0.2",
    "gulp-cli": "^2.2.0",
    "gulp-concat": "^2.6.1",
    "gulp-csso": "^3.0.1",
    "gulp-replace": "^1.0.0",
    "gulp-uglify": "^3.0.2",
